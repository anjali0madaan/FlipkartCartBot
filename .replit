modules = ["python-3.11", "nodejs-20", "web", "postgresql-16"]
[agent]
expertMode = true
integrations = ["python_database:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["chromedriver", "chromium", "geckodriver", "openssl", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Web Control Panel"

[[workflows.workflow]]
name = "Flask Web Control Panel"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv run python app.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 46799
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["uv", "run", "gunicorn", "--bind", "0.0.0.0:5000", "--reuse-port", "app:app"]
